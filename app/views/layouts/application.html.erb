<!-- START:head -->
<!DOCTYPE html>
<html>
<head>
<!-- START_HIGHLIGHT -->
  <title>Digital Books Online Store</title>
<!-- END_HIGHLIGHT -->
  <!-- <label id="code.slt"/> --><%= stylesheet_link_tag    "application", media: "all",
    "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %><!-- <label id="code.jlt"/> -->
  <%= csrf_meta_tags %><!-- <label id="code.csrf"/> -->
</head>
<!-- END:head -->
<body class='<%= controller.controller_name %>'>  <!-- Iteration A2 (page 71) -->
<!-- START_HIGHLIGHT -->
  <div id="banner">
    <%= form_tag store_path, class: 'locale' do %>  <!-- Iteration J4 (Chapter 15.4, p. 229) -->
      <%= select_tag 'set_locale', 
        options_for_select(LANGUAGES, I18n.locale.to_s),
        onchange: 'this.form.submit()' %>
      <%= submit_tag 'submit' %>
      <%= javascript_tag "$('.locale input').hide()" %>
    <% end %>
    <%= link_to image_tag("digibooks_logo.jpg"), "http://www.n24.de/n24/Nachrichten/Netzwelt/d/1640518/amazon-startet-kindle-bibliothek.html", :target => "_blank" %>
    <%= @page_title || t('.title') %>   <!-- Iteration J2 (Chapter 15.2, p. 216f.) -->
    <!--<%= @page_title || "Pragmatic Bookshelf" %> -->   <!-- <label id="code.depot.e.title"/> -->
  </div>
  <div id="columns">
    <div id="side">
      <!-- <div id="cart">           <!-- Iteration F1 (Chapter 11.1, p. 139) -->
      <!-- START:hidden_div -->
      <% if @cart %>      <!-- Iteration F6 (Chapter 11.6, p. 155) -->
        <%= hidden_div_if(@cart.line_items.empty?, id: 'cart') do %>   <!-- Iteration F4, Chapter 11.4, p. 151 -->
          <%= render @cart %>
        <% end %>
      <% end %>
      <!-- END:hidden_div -->

      <ul>
        <li><a href="/"><%= t('.home') %></a></li>        <!-- <li><a href="/">Home</a></li> Iteration J2 (Chapter 15.2, p. 216f.) -->
        <li><a href="/"><%= t('.questions') %></a></li>   <!-- http://www..../faq -->
        <li><a href="/"><%= t('.news') %></a></li>   <!-- http://www..../news -->
        <li><a href="/"><%= t('.contact') %></a></li>   <!-- http://www..../news -->
      </ul>
    </div>
    <div id="main">
<!-- END_HIGHLIGHT -->
      <%= yield %><!-- <label id="code.depot.e.include"/> -->
<!-- START_HIGHLIGHT -->
    </div>
  </div>
<!-- END_HIGHLIGHT -->
</body>
</html>
