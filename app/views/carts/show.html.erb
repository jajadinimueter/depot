<% if notice %>				<!-- Iteration D3 -->
<p id="notice"><%= notice %></p>
<% end %>

<h2>Your Pragmatic Cart</h2>

<table style="border:0; width:70%;">
    <tr>
        <th style="text-align: left;">Product</th>
        <th style="text-align: right;">Price</th>
        <th style="text-align: right;">Quantity</th>
        <th style="text-align: right;">Subtotal<th>
    </tr>
    <% @cart.line_items.each do |item| %>
    <tr>
        <td style="text-align: left;"><%= item.product.title %></td>
        <td style="text-align: right;"><%= number_to_chf(item.product.price)%></td>
        <td style="text-align: right;">&times; <%= item.quantity %></td>
        <td style="text-align: right;"><%= number_to_chf(item.product.price * item.quantity) %></td>
    </tr>
    <% end %>
    <tr></tr>
    <tr>
        <th></th>
        <th></th>
        <th style="text-align: right;">Total</th>
        <th style="text-align: right;"><%= number_to_chf(@cart.get_total_price) %></th>
    </tr>
</table>




